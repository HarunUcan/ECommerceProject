@model AdminCategoryEditViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
    ViewData["ActivePage"] = "Category-Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Kategori Düzenle</h1>

    <!-- Kategori Düzenleme Formu -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Kategori Bilgilerini Düzenle</h2>
        <form method="post">
            <input type="hidden" asp-for="CategoryEditDto.CategoryId" value="@Model.CategoryEditDto.CategoryId">
            <div class="mb-6">
                <label for="categoryName" class="block text-sm font-medium text-gray-600">Kategori Adı</label>
                <input type="text" asp-for="CategoryEditDto.Name" id="categoryName" placeholder="Örn:Kadın Giyim" value="@Model.CategoryEditDto.Name"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
                @* <span asp-validation-for="CategoryDto.Name" class="text-red-500 text-sm"></span> *@
            </div>

            <div class="mb-6">
                <label for="parentCategory" class="block text-sm font-medium text-gray-600">Üst Kategori (Opsiyonel)</label>
                <select id="parentCategory" asp-for="CategoryEditDto.ParentCategoryId"
                        class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Hiçbiri</option>
                    @foreach (var category in Model.Categories.Where(c => c.ParentCategory == null))
                    {
                        @await Html.PartialAsync("_CategoryDropdown", new { Category = category, Depth = 0 })
                    }
                </select>
            </div>

            <div class="flex justify-end">
                <button type="submit"
                        class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-white">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

