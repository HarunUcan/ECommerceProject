
@{
    ViewData["Title"] = "Create";
    ViewData["ActivePage"] = "Category-Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Kategori Ekle</h1>

    <!-- Add Category Form -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md mb-10">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Yeni Kategori Ekle</h2>
        <form action="#" method="POST">
            <div class="mb-6">
                <label for="categoryName" class="block text-sm font-medium text-gray-600">
                    Kategori
                    Adı
                </label>
                <input type="text" id="categoryName" name="categoryName" placeholder="Kategori adını girin"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="parentCategory" class="block text-sm font-medium text-gray-600">
                    Üst Kategori
                    (Opsiyonel)
                </label>
                <select id="parentCategory" name="parentCategory"
                        class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Hiçbiri</option>
                    <option value="1">Elektronik</option>
                    <option value="2">Moda</option>
                    <option value="3">Ev ve Yaşam</option>
                </select>
            </div>

            <div class="flex justify-end">
                <button type="submit"
                        class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-white">
                    Ekle
                </button>
            </div>
        </form>
    </div>

</div>


