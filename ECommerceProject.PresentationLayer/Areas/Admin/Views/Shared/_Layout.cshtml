<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kategori Ekle</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script>
        function toggleSubmenu(submenuId, iconId) {
            // Toggle submenu visibility
            const submenu = document.getElementById(submenuId);
            submenu.classList.toggle('hidden');

            // Toggle arrow rotation
            const icon = document.getElementById(iconId);
            icon.classList.toggle('rotate-180');
        }
    </script>
</head>

<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-900 text-gray-200">
            <div class="p-6 text-lg font-bold border-b border-gray-700">Admin Panel</div>
            <nav class="mt-4">
                <a href="#" class="block py-3 px-6 @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "bg-pink-700" : "hover:bg-gray-700")">Dashboard</a>

                <!-- ÜRÜNLER -->
                <div class="relative">
                    <a href="#" onclick="toggleSubmenu('products-submenu', 'products-icon')"
                       class="block py-3 px-6 text-white flex items-center justify-between">
                        Ürünler
                        <svg id="products-icon" class="w-4 h-4 ml-2 transition-transform duration-300"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24"
                             xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7">
                            </path>
                        </svg>
                    </a>
                    <div id="products-submenu" class="@(ViewData["ActivePage"]?.ToString() == "Products" ? "" : ViewData["ActivePage"]?.ToString() == "Product-Create" ? "" : "hidden")">
                        <a href="#" class="block py-2 pl-10 text-sm @(ViewData["ActivePage"]?.ToString() == "Products" ? "bg-pink-700" : "hover:bg-gray-700")">Mevcut Ürünler</a>
                        <a href="#" class="block py-2 pl-10 text-sm @(ViewData["ActivePage"]?.ToString() == "Product-Create" ? "bg-pink-700" : "hover:bg-gray-700")">Ürün Ekle</a>
                    </div>
                </div>

                <!-- KATEGORİLER -->
                <div class="relative">
                    <a href="#" onclick="toggleSubmenu('categories-submenu', 'categories-icon')"
                       class="block py-3 px-6 text-white flex items-center justify-between">
                        Kategoriler
                        <svg id="categories-icon" class="w-4 h-4 ml-2 transition-transform duration-300"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24"
                             xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7">
                            </path>
                        </svg>
                    </a>
                    <div id="categories-submenu" class="@(ViewData["ActivePage"]?.ToString() == "Categories" ? "" : ViewData["ActivePage"]?.ToString() == "Category-Create" ? "" : "hidden")">
                        <a href="#" class="block py-2 pl-10 text-sm @(ViewData["ActivePage"]?.ToString() == "Categories" ? "bg-pink-700" : "hover:bg-gray-700")">Mevcut Kategoriler</a>
                        <a href="#" class="block py-2 pl-10 text-sm @(ViewData["ActivePage"]?.ToString() == "Category-Create" ? "bg-pink-700" : "hover:bg-gray-700")">Kategori Ekle</a>
                    </div>
                </div>

                <!-- KUPONLAR -->
                <div class="relative">
                    <a href="#" onclick="toggleSubmenu('coupons-submenu', 'coupons-icon')"
                       class="block py-3 px-6 text-white flex items-center justify-between">
                        Kuponlar
                        <svg id="coupons-icon" class="w-4 h-4 ml-2 transition-transform duration-300"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24"
                             xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7">
                            </path>
                        </svg>
                    </a>
                    <div id="coupons-submenu" class="@(ViewData["ActivePage"]?.ToString() == "Coupons" ? "" : ViewData["ActivePage"]?.ToString() == "Coupon-Create" ? "" : "hidden")">
                        <a href="#" class="block py-2 pl-10 text-sm @(ViewData["ActivePage"]?.ToString() == "Coupons" ? "bg-pink-700" : "hover:bg-gray-700")">Mevcut Kuponlar</a>
                        <a href="#" class="block py-2 pl-10 text-sm @(ViewData["ActivePage"]?.ToString() == "Coupon-Create" ? "bg-pink-700" : "hover:bg-gray-700")">Kupon Ekle</a>
                    </div>
                </div>

                <a href="#" class="block py-3 px-6 hover:bg-gray-700">Siparişler</a>
                <a href="#" class="block py-3 px-6 hover:bg-gray-700">Kullanıcılar</a>
                <a href="#" class="block py-3 px-6 hover:bg-gray-700">Ayarlar</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 bg-white p-10">
            @RenderBody()
        </main>
    </div>
</body>

</html>
