@model AdminProductViewModel
@{
    ViewData["Title"] = "Create";
    ViewData["ActivePage"] = "Product-Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>

    <style>
        /* Sayı girişindeki okları kaldırmak için */
        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type="number"] {
            -moz-appearance: textfield;
            /* Firefox için */
        }

        /* Focus kaldırma */
        input,
        select,
        textarea,
        button {
            outline: none !important;
            box-shadow: none !important;
        }
    </style>

    <script>
        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            const label = document.getElementById('imageLabel');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.classList.remove('hidden');
                    label.classList.add('hidden');
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function previewMultipleImages(input, containerId) {
            const container = document.getElementById(containerId);
            const existingImages = container.querySelectorAll('img');
            const addButton = container.querySelector('.add-button');

            if (input.files) {
                Array.from(input.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const imgContainer = document.createElement('div');
                        imgContainer.classList.add('relative', 'w-20', 'h-20', 'm-2');

                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.classList.add('w-full', 'h-full', 'object-cover', 'rounded-lg', 'border', 'border-gray-300');

                        const deleteIcon = document.createElement('button');
                        deleteIcon.innerHTML = '<i class="fa-solid fa-trash-can text-red-500 text-sm"></i>';
                        deleteIcon.classList.add('absolute', 'top-[-20px]', 'right-[0px]', 'cursor-pointer', 'transform', 'translate-x-1/2', 'translate-y-1/2');
                        deleteIcon.onclick = () => imgContainer.remove();

                        imgContainer.appendChild(img);
                        imgContainer.appendChild(deleteIcon);
                        container.insertBefore(imgContainer, addButton);
                    };
                    reader.readAsDataURL(file);
                });
            }
        }

        let stockIndex = 1;
        function addSizeStock() {
            const container = document.getElementById('sizeStockContainer');
            const div = document.createElement('div');
            div.classList.add('size-stock');
            div.classList.add('flex');
            div.classList.add('items-center');
            div.classList.add('space-x-2');
            div.innerHTML = `
                    <select name="AdminProductSizeStocks[${stockIndex}].Size"
                                class="w-1/4 rounded-lg border border-gray-300 px-4 py-2 text-gray-700 bg-gray-50">
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                    </select>
                                <input type="number" name="AdminProductSizeStocks[${stockIndex}].Stock" placeholder="Stok Miktarı"
                               class="w-1/4 rounded-lg border border-gray-300 px-4 py-2 text-gray-700 bg-gray-50">
                    <button type="button" onclick="removeSizeStock(this)"
                            class="px-3 py-2 bg-red-500 text-white rounded-lg">
                        Sil
                    </button>
                `;
            container.appendChild(div);
            stockIndex++;
        }
    </script>

</head>

<div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Ürün Ekle</h1>

    <!-- Add Product Form -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Yeni Ürün Ekle</h2>
        <form action="#" method="POST" enctype="multipart/form-data">
            <div class="mb-6">
                <label for="productName" class="block text-sm font-medium text-gray-600">Ürün Adı</label>
                <input type="text" id="productName" name="ProductName" placeholder="Ürün adını girin"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50">
            </div>

            <div class="mb-6">
                <label for="description" class="block text-sm font-medium text-gray-600">Ürün Açıklaması</label>
                <textarea id="description" name="Description" rows="4" placeholder="Ürün açıklamasını girin"
                          class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50"></textarea>
            </div>

            <div class="mb-6">
                <label for="price" class="block text-sm font-medium text-gray-600">Fiyat</label>
                <div class="mt-2 flex items-center rounded-lg border border-gray-300 bg-gray-50 shadow-sm">
                    <input type="number" step="0.01" id="price" name="Price" placeholder="Ürün fiyatını girin"
                           class="block w-full px-4 py-2 text-gray-700 bg-gray-50 border-none appearance-none rounded-l-lg" />
                    <div class="border-l border-gray-300 h-8"></div>
                    <select id="currency" name="Currency"
                            class="block px-3 py-2 text-gray-700 bg-gray-50 border-none rounded-r-lg">
                        <option value="TRY">TRY</option>
                        <!--    <option value="EUR">EUR</option> 
                                <option value="USD">USD</option>
                                <option value="GBP">GBP</option> -->
                    </select>
                </div>
            </div>

            <div class="mb-6">
                <label for="category" class="block text-sm font-medium text-gray-600">Kategori</label>
                <select id="category" name="CategoryId"
                        class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50">
                    <option value="">Hiçbiri</option>
                    @foreach (var category in Model.Categories.Where(c => c.ParentCategory == null))
                    {
                        @await Html.PartialAsync("_CategoryDropdown", new { Category = category, Depth = 0 })
                    }
                </select>
            </div>

            <!-- Beden ve Stok Miktarları -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-600">Beden, Renk ve Stok Miktarı</label>
                <div id="sizeStockContainer" class="mt-2 space-y-2">
                    <div class="size-stock flex items-center space-x-2">
                        <select name="AdminProductSizeStocks[0].Size"
                                class="w-1/4 rounded-lg border border-gray-300 px-4 py-2 text-gray-700 bg-gray-50">
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                        <input type="number" name="AdminProductSizeStocks[0].Stock" placeholder="Stok Miktarı"
                               class="w-1/4 rounded-lg border border-gray-300 px-4 py-2 text-gray-700 bg-gray-50">
                        <button type="button" onclick="removeSizeStock(this)"
                                class="px-3 py-2 bg-red-500 text-white rounded-lg">
                            Sil
                        </button>
                    </div>
                </div>
                <button type="button" onclick="addSizeStock()" class="mt-2 px-4 py-2 bg-green-500 text-white rounded-lg">
                    +
                    Varyant
                    Ekle
                </button>
            </div>

            <!-- Main Product Image -->
            <div class="mb-6">
                <label for="mainImage" class="block text-sm font-medium text-gray-600">Ana Ürün Görseli</label>
                <div class="w-full h-40 flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-lg bg-gray-50 p-4 cursor-pointer"
                     onclick="document.getElementById('mainImage').click()">
                    <input type="file" id="mainImage" name="MainImage" accept="image/*" class="hidden"
                           onchange="previewImage(this, 'mainImagePreview')">
                    <img id="mainImagePreview" class="hidden w-32 h-32 object-cover rounded-lg">
                    <span id="imageLabel" class="text-gray-500 text-sm">Resim Ekle</span>
                </div>
            </div>

            <!-- Additional Product Images -->
            <div class="mb-6">
                <label for="additionalImages" class="block text-sm font-medium text-gray-600">
                    Ekstra Ürün
                    Görselleri
                </label>
                <div id="additionalImagesContainer"
                     class="flex gap-2 flex-wrap border-2 border-dashed border-gray-300 p-4 rounded-lg items-center">
                    <label class="add-button w-20 h-20 flex items-center justify-center bg-gray-100 text-gray-500 rounded-lg cursor-pointer border border-gray-300 self-center">
                        <input type="file" id="additionalImages" name="AdditionalImages" accept="image/*" multiple
                               class="hidden" onchange="previewMultipleImages(this, 'additionalImagesContainer')">
                        <span class="text-2xl font-bold">+</span>
                    </label>
                </div>
            </div>

            <div class="flex justify-end">
                <button type="submit"
                        class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow">
                    Ekle
                </button>
            </div>
        </form>
    </div>
</div>


