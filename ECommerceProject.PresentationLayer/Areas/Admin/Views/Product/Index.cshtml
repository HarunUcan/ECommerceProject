                            <a href="/urun-duzenle/@product.Id"
                               class="px-4 py-2 text-white bg-yellow-500 hover:bg-yellow-600 rounded-lg shadow">Düzenle</a>
                            <a href="#"
                               class="px-4 py-2 text-white bg-red-500 hover:bg-red-600 rounded-lg shadow">Sil</a>
                        </td>
                    </tr>
                } *@
            </tbody>
        </table>

        <div id="product-list">
            <!-- Ürünler buraya yüklenecek -->
        </div>
        <div id="loading" style="display: none; text-align: center; margin-top: 20px;">
            <svg class="animate-spin h-6 w-6 text-gray-600 inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 0116 0h-2a6 6 0 00-12 0H4z"></path>
            </svg>
            <span class="text-gray-600 ml-2">Yükleniyor...</span>
        </div>

