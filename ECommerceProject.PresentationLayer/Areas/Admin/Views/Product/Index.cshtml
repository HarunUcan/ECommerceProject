@model List<ProductDto>
@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function filterProducts() {
            const input = document.getElementById('search-bar');
            const filter = input.value.toLowerCase();
            const tableRows = document.querySelectorAll('tbody tr');

            tableRows.forEach(row => {
                const productName = row.querySelector('td:nth-child(3)');
                if (productName) {
                    const textValue = productName.textContent || productName.innerText;
                    row.style.display = textValue.toLowerCase().includes(filter) ? '' : 'none';
                }
            });
        }

        let page = 1;
        let isLoading = false;
        let pageSize = 10; // Her sayfada kaç ürün gösterilecek

        function loadMoreProducts() {
            if (isLoading) return;
            isLoading = true;
            $("#loading").show();

            $.get(`/Admin/Product/GetPagedProducts?page=${page}&pageSize=${pageSize}`, function (data) {
                if (data.length > 0) {
                    data.forEach(product => {
                        $("#product-list").append(`

                            <tr>
                                        <td class="border-b py-4">${product.id}</td>
                                <td class="border-b py-4">
                                            <img src="${product.mainImageUrl}" alt="Ürün Resmi"
                                                 class="w-12 h-12 rounded-md object-cover">
                                </td>
                                        <td class="border-b py-4">${product.name}</td>
                                        <td class="border-b py-4">${product.price} ₺</td>
                                        <td class="border-b py-4">${product.categoryName}</td>
                                <td class="border-b py-4">
                                            <button onclick="toggleFeatured(${product.id}, this)"
                                        class="${product.isFeatured ? 'text-yellow-500' : 'text-gray-600 hover:text-yellow-500'} transition"
                                        title="Öne Çıkanlara Ekle/Kaldır">
                                    <i class="fa-solid fa-star"></i>
                                </button>
                                    
                                    <a href="/urun-duzenle/${product.id}"
                                                       class="text-yellow-600 hover:text-yellow-800 transition"><i class="fas fa-edit" title="Düzenle"></i></a>

                                            <button onclick="confirmDelete(${product.id})" class="text-red-600 hover:text-red-800 transition" title="Sil"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            `);
                    });

                    page++; // Sonraki sayfaya geç
                } else {
                    $(window).off("scroll"); // Ürün yoksa scroll olayını kaldır
                }

                $("#loading").hide();
                isLoading = false;
            });
        }

        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() >= $(document).height() - 100) {
                loadMoreProducts();
            }
        });

        // Sayfa açıldığında ilk sayfayı yükle
        $(document).ready(function () {
            loadMoreProducts();
        });

        function confirmDelete(productId) {
            Swal.fire({
                title: "Emin misiniz?",
                text: "Bu ürünü silmek istediğinize emin misiniz? Bu işlem geri alınamaz!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Evet, sil!",
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Admin/Product/Delete?id=${productId}`;
                }
            });
        }

        // Öne çıkan ürünü işaretleme fonksiyonu
        function toggleFeatured(productId, btn) {
            $.get(`/Admin/Product/ToggleFeatured/${productId}`, function (response) {
                console.log(response);
                if (response.success) {
                    // Eğer buton zaten 'text-yellow-500' sınıfına sahipse, kaldır ve eski rengini ekle
                    if ($(btn).hasClass("text-yellow-500")) {
                        $(btn).removeClass("text-yellow-500")
                            .addClass("text-gray-600 hover:text-yellow-500")
                            .attr("title", "Öne Çıkar");
                    } else {
                        $(btn).removeClass("text-gray-600 hover:text-yellow-500")
                            .addClass("text-yellow-500")
                            .attr("title", "Öne Çıkarmayı Kaldır");
                    }
                }
            });
        }
    </script>

</head>

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-semibold text-gray-700">Mevcut Ürünler</h1>
        <div class="relative">
            <input type="text" id="search-bar" onkeyup="filterProducts()" placeholder="Ürün ara..."
                   class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <svg class="w-5 h-5 absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"
                 xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-4.35-4.35m2.44-5.14a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </div>
    </div>

    <!-- Products Table -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Mevcut Ürünler</h2>
        <table class="w-full table-auto border-collapse">
            <thead>
                <tr>
                    <th class="border-b-2 py-4 text-left text-gray-600">Ürün ID</th>
                    <th class="border-b-2 py-4 text-left text-gray-600">Ürün Resmi</th>
                    <th class="border-b-2 py-4 text-left text-gray-600">Ürün Adı</th>
                    <th class="border-b-2 py-4 text-left text-gray-600">Fiyat(TL)</th>
                    <th class="border-b-2 py-4 text-left text-gray-600">Kategori</th>
                    <th class="border-b-2 py-4 text-left text-gray-600">İşlemler</th>
                </tr>
            </thead>
            <tbody id="product-list">
