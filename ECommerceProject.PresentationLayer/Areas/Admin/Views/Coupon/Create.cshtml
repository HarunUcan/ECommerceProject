    @* Deneme Alanı *@
    <style>
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
    <div class="flex justify-center items-center mt-10 bg-gray-50 p-8 rounded-lg shadow-md">
        <!-- Coupon Card -->
        <div class="relative w-2/3 h-80 bg-gradient-to-b from-blue-400 to-gray-800 rounded-lg  flex items-center justify-center transition-all duration-300 p-4 gap-4"
             id="coupon-label">
            <div class="w-6 h-6 bg-white rounded-full absolute left-8 -top-3"></div>
            <div class="w-6 h-6 bg-white rounded-full absolute left-8 -bottom-3"></div>

            <!-- Kesikli Çizgi -->
            <div class="absolute left-10 top-0 bottom-0 flex flex-col justify-center space-y-4">
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>

            <!-- Coupon Content -->
            <form action="" method="post">

                <div class="flex flex-col items-center justify-center ">
                    <div id="discount-amount-field flex justify-center" class="">
                        <input type="number" asp-for="@Model.Discount" id=""
                               class="relative text-5xl w-16 font-bold border-b bg-transparent text-center text-white outline-none"
                               value="50">
                        <select asp-for="@Model.CouponType" id="" class="text-5xl font-bold border-b bg-transparent text-white outline-none">
                            <option class="text-black" value="percentage">%</option>
                            <option class="text-black" value="amount">TL</option>
                        </select>
                        <span class="text-5xl font-bold text-white"> İNDİRİM</span>


                    </div>
                    <!-- Coupon Code Input -->
                    <input type="text" asp-for="@Model.Code" id=""
                           class="w-60 h-12 text-center text-white text-lg font-bold bg-transparent border-b outline-none mt-4"
                           placeholder="Kupon Kodunu Giriniz..." required>

                    <!-- Coupon Expiry Date Input -->
                    <div class="mt-4 flex items-center justify-center">
                        <span class="text-white font-semibold text-xs">Son Geçerlilik Tarihi:</span>
                        <input type="date" asp-for="@Model.ExpirationDate" id=""
                               class="text-center text-md font-bold text-white border-b bg-transparent outline-none" required>
                    </div>

                    <!-- Minimum Order Amount -->
                    <div class="mt-4">
                        <input type="number" asp-for="@Model.MinOrderAmount" id=""
                               class="relative text-md w-8 font-bold bg-transparent border-b text-center text-white outline-none"
                               value="0">
                               <span class="text-md font-bold text-white">TL ve Üzeri Siparişlerde Geçerlidir</span>
                    </div>

                    <!-- Coupon Amount -->
                    <div class="absolute right-3 bottom-3">
                        <span class="text-md font-bold text-white">Adet: </span>
                        <input type="number" asp-for="@Model.MaxUsageCount" id=""
                               class="relative text-md w-8 font-bold bg-transparent border-b text-center text-white outline-none"
                               value="0">
                    </div>

                    <!-- Button -->
                    <button type="submit"
                            class="absolute right-3 top-3 px-6 py-2 text-white bg-green-600 hover:bg-green-700 rounded-lg shadow">
                        Kupon Oluştur
                    </button>
            </form>

        </div>
    </div>

</div>


