@model AppUserEditDto
@{
    Layout = "~/Areas/User/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Kişisel Bilgiler";
    ViewData["ActivePage"] = "CustomerProfile";
    ViewData["CustomerName"] = Model.Name;
}

<div class="flex-grow p-6">

    <!-- Profil Bilgileri -->
    <form method="post" id="info" class="card mx-auto mb-8">
        <h2 class="text-2xl font-semibold mb-4">Kişisel Bilgiler</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="name" class="block text-gray-700 font-medium">Ad</label>
                <input type="text" id="name" asp-for="Name"
                       class="w-full border border-gray-300 rounded-lg p-2 mt-2">
            </div>
            <div>
                <label for="name" class="block text-gray-700 font-medium">Soyad</label>
                <input type="text" id="name" asp-for="Surname"
                       class="w-full border border-gray-300 rounded-lg p-2 mt-2">
            </div>
            <div>
                <label for="email" class="block text-gray-700 font-medium">E-posta</label>
                <input type="email" id="email" asp-for="Email"
                       class="w-full border border-gray-300 rounded-lg p-2 mt-2">
            </div>
            <div>
                <label for="phone" class="block text-gray-700 font-medium">Telefon Numarası</label>
                <input type="text" id="phone" asp-for="PhoneNumber"
                       class="w-full border border-gray-300 rounded-lg p-2 mt-2">
            </div>
        </div>
        <button type="submit"
                class="mt-8 bg-black text-white py-2 px-4 rounded-lg hover:bg-gray-700 transition">
            Bilgileri Güncelle
        </button>
    </form>

</div>

