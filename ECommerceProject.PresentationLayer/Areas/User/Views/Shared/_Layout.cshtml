<body>
    <!-- Üst Menü -->
    <header class="sticky top-0  shadow-md z-10">
        <div class="flex justify-between items-center px-6 py-6 bg-white text-black w-full">
            <!-- Menü İkonu -->
            <div class="menu-icon">
                <button id="menu-button" class="lg:hidden text-black">
                    <i class="fa-solid fa-bars text-xl"></i>
                </button>
            </div>

            <!-- Site Adı -->
            <a href="">
                <div class="text-2xl font-bold text-center flex-grow md:text-xl">ECommerce App</div>
            </a>
            <!-- Sepet ve Giriş Yap İkonları -->
            <div class="header-icons flex justify-between items-center gap-6">
                <!-- Sepet Iconu -->
                <div class="header-cart">
                    <a href="cartpage.html" class="hover:text-gray-400">
                        <i class="fa-solid fa-bag-shopping text-black text-xl"></i>
                        <span class="absolute flex justify-center items-center w-[15px] h-[15px] bg-red-700 top-7 right-14 rounded-full text-white text-xs">3</span>
                        <!-- Örnek olarak 3 ürün var -->
                    </a>
                </div>

                <!-- Giriş Yap Iconu -->
                <a asp-area="User" asp-controller="CustomerProfile" asp-action="Index" class="hover:text-gray-400">
                    <i class="fa-regular fa-user text-black text-xl"></i> <!-- Giriş yap ikonunu ekledik -->
                </a>
            </div>
        </div>

        <nav class="hidden lg:block w-full px-2 pb-2 bg-white">
            <div class="flex justify-center container mx-auto h-6">
                <div class="flex items-center justify-center gap-8">
                    <ul class="flex items-center justify-center gap-8">
                        <li class="cursor-pointer hover:border-b-2 border-red-700">Yeni Gelenler</li>
                        <li class="cursor-pointer hover:border-b-2 border-red-700">Çok Satanlar</li>
                        <li id="categories-btn" class="cursor-pointer hover:border-b-2 border-red-700">Kategoriler</li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="dropdown-categories"
             class="absolute top-full left-0 w-full border-t border-gray-200 bg-white hidden z-50">

            <!-- Kategori Menüsü Versiyon 4 -->
            <!-- Alpine.js Kullanılmıyor -->
            <div class="flex justify-stretch bg-white px-12 py-6 rounded-lg shadow-md">
                @foreach (var category in Model.Categories)
                {
                    if (category.ParentCategory == null)
                    {
                        <ul class="space-y-3">
                            <li class="font-semibold text-lg">@category.Name</li>
                            @await Html.PartialAsync("_CategoriesListPartial", new { Category = category, Depth = 1 })
                        </ul>
                    }
                }
