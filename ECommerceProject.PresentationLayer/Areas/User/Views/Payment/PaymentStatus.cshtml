@{
    Layout = null;
    var isSuccess = ViewData["IsSuccess"] as bool? ?? false;
    var amountPaid = ViewData["AmountPaid"]?.ToString() ?? "$0.00";
    var paymentMethod = ViewData["PaymentMethod"]?.ToString() ?? "Unknown";
    var transactionId = ViewData["TransactionId"]?.ToString() ?? "#000000";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment Status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-md w-full">
        <div class="flex flex-col items-center">
            @if (isSuccess)
            {
                <div class="bg-green-100 text-green-600 rounded-full p-4 mb-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold mb-2">Payment Successful</h1>
                <p class="text-gray-600 text-center mb-6">
                    Teşekkürler! Ödemeniz onaylandı ve siparişiniz işleme alındı, kısa süre içinde bir onay e-postası alacaksınız.
                </p>

                <div class="border-t border-b py-4 mb-6 grid grid-cols-2 gap-4 text-sm text-gray-700">
                    <div>
                        <div class="font-semibold">Amount Paid</div>
                        <div>@amountPaid</div>
                    </div>
                    <div>
                        <div class="font-semibold">Payment Method</div>
                        <div>@paymentMethod</div>
                    </div>
                    <div class="col-span-2">
                        <div class="font-semibold">Transaction ID</div>
                        <div>@transactionId</div>
                    </div>
                </div>
            }
            else
            {
                <div class="bg-red-100 text-red-600 rounded-full p-4 mb-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold mb-2">Payment Failed</h1>
                <p class="text-gray-600 text-center mb-6">
                    Ödeme işleminiz sırasında bir sorun oluştu. Lütfen tekrar deneyin ya da farklı bir yöntem kullanın.
                </p>
            }

            <a href="/" class="bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800">
                Anasayfaya Dön
            </a>
        </div>
    </div>

</body>
</html>
