@model UserAdressViewModel
@{
    Layout = "~/Areas/User/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Adresler";
    ViewData["ActivePage"] = "CustomerAdress";
}

<main class="flex-grow p-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-4">Adresler</h2>

        <!-- Adres Listesi -->
        <div class="space-y-4">

            @foreach (var adress in Model.AdressList)
            {
                <div class="border p-4 rounded-lg bg-white shadow-sm flex justify-between items-center">
                    <div>
                        <h3 class="font-bold">@adress.Title</h3>
                        <p class="text-sm text-gray-600">@adress.City @adress.District</p>
                    </div>
                    <div class="flex space-x-2">
                        <a href="/User/CustomerAdress/Delete/@adress.AdressId"><i class="fa-solid fa-trash-can text-red-500"></i></a>
                    </div>
                </div>
            }
            @* <div class="border p-4 rounded-lg bg-white shadow-sm flex justify-between items-center">
                <div>
                    <h3 class="font-bold">Ev Adresi</h3>
                    <p class="text-sm text-gray-600">İstanbul, Türkiye</p>
                </div>
                <div class="flex space-x-2">
                    <button><i class="fa-solid fa-trash-can text-red-500"></i></button>
                </div>
            </div>

            <div class="border p-4 rounded-lg bg-white shadow-sm flex justify-between items-center">
                <div>
                    <h3 class="font-bold">İş Adresi</h3>
                    <p class="text-sm text-gray-600">Ankara, Türkiye</p>
                </div>
                <div class="flex space-x-2">
                    <button><i class="fa-solid fa-trash-can text-red-500"></i></button>
                </div>
            </div> *@
        </div>

        <!-- Yeni Adres Ekleme -->
        <div class="mt-6">
            <button id="add-address" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-700 transition">
                Yeni Adres Ekle
            </button>
        </div>

        <!-- Yeni Adres Formu -->
        <form method="post" id="address-form" class="hidden mt-6 border p-4 rounded-lg bg-white">
            <h3 class="text-lg font-semibold mb-4">Yeni Adres Ekle</h3>
            <div class="grid grid-cols-1 gap-4">
                <div>
                    <label for="address-title" class="block text-gray-700">Adres Başlığı</label>
                    <input type="text" id="address-title" asp-for="NewAdress.Title"
                           placeholder="Adresinize bir isim verin"
                           class="w-full border border-gray-300 p-2 rounded">
                </div>
                <div>
                    <label for="city" class="block text-gray-700">İl</label>
                    <input type="text" id="city" asp-for="NewAdress.City" placeholder="İl"
                           class="w-full border border-gray-300 p-2 rounded">
                </div>
                <div>
                    <label for="district" class="block text-gray-700">İlçe</label>
                    <input type="text" id="district" asp-for="NewAdress.District" placeholder="İlçe"
                           class="w-full border border-gray-300 p-2 rounded">
                </div>
                <div>
                    <label for="address-line" class="block text-gray-700">Adres</label>
                    <textarea id="address-line" asp-for="NewAdress.AdressLine" placeholder="Tam adresinizi girin"
                              class="w-full border border-gray-300 p-2 rounded"></textarea>
                </div>
                @* <div>
                    <label for="city1" class="block text-gray-700">İlçe</label>
                    <select id="city1" class="w-full border border-gray-300 p-2 rounded">
                        <option value="" disabled selected>Şehir Seçiniz..</option>
                        <option value="Adana">Adana</option>
                        <option value="Adıyaman">Adıyaman</option>
                        <option value="Afyonkarahisar">Afyonkarahisar</option>
                        <option value="Ağrı">Ağrı</option>
                        <option value="Aksaray">Aksaray</option>
                        <option value="Amasya">Amasya</option>
                        <option value="Ankara">Ankara</option>
                        <option value="Antalya">Antalya</option>
                        <option value="Ardahan">Ardahan</option>
                        <option value="Artvin">Artvin</option>
                        <option value="Aydın">Aydın</option>
                        <option value="Balıkesir">Balıkesir</option>
                        <option value="Bartın">Bartın</option>
                        <option value="Batman">Batman</option>
                        <option value="Bayburt">Bayburt</option>
                        <option value="Bilecik">Bilecik</option>
                        <option value="Bingöl">Bingöl</option>
                        <option value="Bitlis">Bitlis</option>
                        <option value="Bolu">Bolu</option>
                    </select>
                </div> *@
            </div>
            <button type="submit"
                    class="mt-4 bg-black text-white px-4 py-2 rounded hover:bg-gray-800">
                Kaydet
            </button>
        </form>
    </div>
</main>

<script>
    const add_addr_btn = document.getElementById('add-address');
    add_addr_btn.addEventListener('click', () => {
        const form = document.getElementById('address-form');
        add_addr_btn.classList.toggle('hidden');
        form.classList.toggle('hidden');
        // add_addr_btn.textContent = form.classList.contains('hidden') ? 'Yeni Adres Ekle' : 'İptal';
    });
</script>

