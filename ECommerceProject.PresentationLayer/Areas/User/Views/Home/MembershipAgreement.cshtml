    <h1 class="text-3xl font-bold border-b pb-2">@Model.StaticPageDto.Title</h1>

    <div class="ql-editor p-0">
        @Html.Raw(Model.StaticPageDto.Content)
    </div>


    <p class="mt-8 text-sm text-gray-500">
        Son Güncellenme Tarihi: @(Model.StaticPageDto.UpdatedDate?.ToString("dd/MM/yyyy") ?? "Belirtilmemiş")
    </p>




