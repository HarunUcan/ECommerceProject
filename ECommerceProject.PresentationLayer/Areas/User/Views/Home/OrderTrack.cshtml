@model HomeViewModel
@{
    ViewData["Title"] = "OrderTrack";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<section class="max-w-3xl mx-auto px-6 py-12 text-gray-800">
    <h1 class="text-3xl font-bold text-center mb-8">Sipariş Takip</h1>

    <form method="post" asp-action="OrderTrack" class="bg-white shadow-md rounded-xl p-6">
        <div class="mb-4">
            <label for="orderNumber" class="block text-sm font-medium text-gray-700 mb-2">Sipariş Numarası</label>
            <input type="text" id="orderNumber" name="orderNumber" required
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-indigo-200">
        </div>

        <button type="submit"
                class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 transition">
            Sorgula
        </button>
    </form>

    @if (ViewBag.TrackingResult != null)
    {
        <div class="mt-8 p-4 bg-green-100 border border-green-300 rounded-xl">
            <p class="text-green-800 font-semibold">@ViewBag.TrackingResult</p>
        </div>
    }
</section>

